
<div class="container">

  <div class="row">

    <h3>投稿する</h3>

    <%= form_tag('/tweets', method: :post) do %>

    <div class="form-group">
      <label for="ImageUrl">Url</label>
      <input type="text" class="form-control" id="ImageUrl" name="image" placeholder="画像URL">
    </div>


    <div class="form-group">
      <label for="Text">Comment</label>
      <textarea class="form-control" rows="3" id="text" name="text" placeholder="ここにコメントを入力してください"></textarea>
    </div>

    <input type="submit" class="btn btn-primary btn-lg" value="投稿">

    <% end %>

  </div>

</div>



