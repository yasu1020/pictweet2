<h2><%= @nickname %>さんの投稿一覧</h2>
<% @tweets.each do |tweet| %>

<div class="panel panel-default">
  <div class="panel-body text-center">
    <%= image_tag tweet.image , :size => '300x300' %></p>
    <%= tweet.text %>
    <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
